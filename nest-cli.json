{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/gateway-server",
  "sourceRoot": "apps/gateway-server/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/gateway-server/tsconfig.app.json",
    "deleteOutDir": true
  },
  "projects": {
    "gateway-server": {
      "type": "application",
      "root": "apps/gateway-server",
      "entryFile": "main",
      "sourceRoot": "apps/gateway-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway-server/tsconfig.app.json"
      }
    },
    "auth-server": {
      "type": "application",
      "root": "apps/auth-server",
      "entryFile": "main",
      "sourceRoot": "apps/auth-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-server/tsconfig.app.json"
      }
    },
    "event-server": {
      "type": "application",
      "root": "apps/event-server",
      "entryFile": "main",
      "sourceRoot": "apps/event-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-server/tsconfig.app.json"
      }
    },
    "lib": {
      "type": "library",
      "root": "lib",
      "entryFile": "index",
      "sourceRoot": "lib/src",
      "compilerOptions": {
        "tsConfigPath": "lib/tsconfig.lib.json"
      }
    }
  }
}